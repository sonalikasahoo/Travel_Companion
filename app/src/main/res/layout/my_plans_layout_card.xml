<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<!--http://flaticon.sodhanalibrary.com/-->
    <android.support.v7.widget.CardView
        app:cardElevation="2dp"
        app:cardCornerRadius="3dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@color/cardview_light_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTripTitle"
                android:text="Trip Title"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="#a09d9d"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/location_map_pin_yellow"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tvDestination"
                    android:text="Destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/hotel_icon_yellow"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tvHotel"
                    android:text="Hotel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/flight_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tvFlight"
                    android:text="Hotel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>